<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />

  <title>Login</title>

  <!-- CSS Link -->
  <link rel="stylesheet" href="/css/style.css" />

  <!-- Bootstrap Link -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous" />
  <link
    href="https://fonts.googleapis.com/css2?family=Merriweather:ital,wght@0,300;0,400;0,700;0,900;1,300;1,400;1,700;1,900&display=swap"
    rel="stylesheet" />
</head>

<body>
  <!-- Login -->
  <section id="login" class="my-5">
    <div class="container">
      <div class="row">
        <!-- Column-1 -->
        <div class="col-lg-6">
          <img class="w-100" src="https://www.amity.edu/gwalior/images/infra-study-img2.jpg"
            alt="College Students Image-1" height="100%" style="border-radius: 2px" />
        </div>
        <!-- End Column-1 -->

        <!-- Column-2 -->
        <div class="col-lg-6 bglogin p-4">
          <form action="/verifyLogin" method="post">
            <!-- logo -->
            <center>
              <img class="mb-4 rounded-circle" src="https://fashionweek.gt/wp-content/uploads/2022/07/dummy-logo.png"
                alt="logo" width="20%" height="20%" />
            </center>

            <!-- Heading (Login) -->
            <h1 class="mb-4 text-center">Login</h1>
            <% if(msg1.length> 0){ %>
              <div class="alert alert-success">
                <!--To Print-->
                <%= msg1 %>
              </div>
              <% } %>
                <% if(msg.length> 0){ %>
                  <div class="alert alert-danger">
                    <!--To Print-->
                    <%= msg %>
                  </div>
                  <% } %>

                    <!-- Email -->
                    <div class="row mb-3">
                      <div class="col-lg-2 text-center rounded text-light fw-light my-auto p-2"
                        style="background-color: #183e65">
                        Email
                      </div>
                      <div class="col-lg-10">
                        <input class="form-control" name="email" type="email" placeholder="name@example.com" required />
                      </div>
                    </div>

                    <!-- Password -->
                    <div class="row mb-4">
                      <div class="col-lg-2 text-center rounded text-light fw-light my-auto p-2"
                        style="background-color: #183e65">
                        Password
                      </div>
                      <div class="col-lg-10">
                        <input class="form-control" name="password" type="password" required />
                      </div>
                    </div>

                    <!-- Button (Login) -->
                    <center>
                      <button type="submit" class="btn btn-primary mb-3 btn-lg">
                        Login
                      </button>
                      <!-- <a href="/google" class="btn btn-primary mb-3 btn-lg">Login with Google</a> -->
                    </center>
                    <center>
                      <div class=" row mb-4 ">
                        <a href="#" data-bs-toggle="modal" data-bs-target="#Forgot"
                          style="text-decoration: none;">Forgot Password</a>
                      </div>
                    </center>
                    <!-- Register Now -->
                    <center>
                      <p class="text-uppercase fw-light">
                        Don't have an account? &nbsp;<a class="text-decoration-none" href="/register">Register Now</a>
                      </p>
                    </center>
                    <!-- Google Identity Services -->

          </form>

        </div>
        <!-- End Column-2 -->
      </div>
    </div>
  </section>
  <!-- End Login -->
  <!--Forgot Password -->
  <div class="modal fade" id="Forgot" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h1 class="modal-title fs-5" id="exampleModalLabel">Forget Password</h1>

          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">

          <form action="/forgot_Password" method="post">


            <div class="mb-3">
              <label for="">Email</label>
              <input type="text" name="email" class="form-control">
            </div>




            <button type="submit" class="btn " style="background-color: #34B1AA; color:black">Submit</button>

          </form>
        </div>

      </div>
    </div>
  </div>
  <!--End Btech Modal -->
  <!-- Java Script Link -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL"
    crossorigin="anonymous"></script>
</body>

</html>