<!DOCTYPE html>
<html lang="en">
<link>
<meta charset="UTF-8" />
<meta name="viewport" content="width=device-width, initial-scale=1.0" />

<title>Register</title>

<!-- CSS Link -->
<link rel="stylesheet" href="/css/style.css" />

<!-- Bootstrap Link -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet"
  integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous"
  rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.2/css/all.min.css">
<link
  href="https://fonts.googleapis.com/css2?family=Merriweather:ital,wght@0,300;0,400;0,700;0,900;1,300;1,400;1,700;1,900&display=swap"
  rel="stylesheet">

</head>

<body>
  <!-- Register Here -->
  <section id="login" class="my-5">
    <div class="container">
      <div class="row">
        <!-- Column-1 -->
        <div class="col-lg-6">
          <img class="w-100" src="https://www.amity.edu/gwalior/images/home-stu-life-img11.webp"
            alt="College Students Image-2" height="100%" style="border-radius: 10px 200px"/>
        </div>
        <!-- End Column-1 -->

        <!-- Column-2 -->
        <div class="col-lg-6 bglogin p-4">
          <form action="/insertStudent" method="post" enctype="multipart/form-data" id="login-form">
            <!-- logo -->
            <center>
              <img class="mb-4 rounded-circle" src="./Images/SignUpImage.jpeg" alt="Sign Up Image" width="20%"
                height="20%" />
            </center>

            <!-- Heading (Register Here) -->
            <h1 class="mb-5 text-center">Register Here</h1>

            <% if(message.length> 0){ %>
              <div class="alert alert-danger">
                <!--To Print-->
                <%= message %>
              </div>
              <% } %>
                <% if(msg.length> 0){ %>
                  <div class="alert alert-success">
                    <!--To Print-->
                    <%= msg %>
                  </div>
                  <% } %>

                    <!-- User Name -->
                    <div class="row mb-4">
                      <div class="col-lg-3 text-center rounded text-light fw-light my-auto p-2"
                        style="background-color: #183e65;">
                        Name
                      </div>
                      <div class="col-lg-9">
                        <input name="name" class="form-control text-capitalize" type="text"
                          placeholder="Enter your name" />
                      </div>
                    </div>

                    <!-- Email -->
                    <div class="row mb-3">
                      <div class="col-lg-3 text-center rounded text-light fw-light my-auto p-2"
                        style="background-color: #183e65;">
                        Email
                      </div>
                      <div class="col-lg-9">
                        <input name="email" class="form-control" type="email" placeholder="name@example.com" title="Enter valid email id"/>
                      </div>
                    </div>

                    <!-- Password -->
                    <div class="row mb-4">
                      <div class="col-lg-3 text-center rounded text-light fw-light my-auto p-2"
                        style="background-color: #183e65;">
                        Password
                      </div>
                      <div class="col-lg-9">
                        <div class="password-container">
                          <input name="password" id="password" class="form-control" type="password" placeholder="Enter your Password" minlength="8" pattern="^(?=.*[a-z])(?=.*[A-Z])(?=.*\d)(?=.*[@$!%*?&])[A-Za-z\d@$!%*?&]{8,}$"
                          title="Password must be at least 8 characters long, contain an uppercase letter, a lowercase letter, a number, and a special character." />
                          <i class="fa-solid fa-eye" id="show-password"></i>
                        </div>
                       
                        
                      </div>
                    </div>
                    
                    <!-- Confirm Password -->
                    <div class="row mb-4">
                      <div class="col-lg-3 text-center rounded text-light fw-light my-auto p-2"
                        style="background-color: #183e65;">
                        Confirm Password
                      </div>
                      <div class="col-lg-9">
                        <input name="confirmpassword" id="confirmpassword" class="form-control" type="password" placeholder="Confirm Your Password"/>
                      </div>
                    </div>

                    <!-- Image -->
                    <div class="row mb-4">
                      <div class="col-lg-3 text-center rounded text-light fw-light my-auto p-2"
                        style="background-color: #183e65;">
                        Image
                      </div>
                      <div class="col-lg-9">
                        <input name="image" class="form-control" type="file" accept="image/*" />
                      </div>
                    </div>

                    <!-- Button (Login) -->
                    <center>
                      <button type="submit" class="btn text-white mb-3 btn-lg" style="background-color: #2575c6;">Register</button>
                    </center>
          </form>
          <div class="text-center mt-3">
            <a href="/" style="text-decoration: none;">Back to Login</a>
          </div>
        </div>

        <!-- End Column-2 -->
      </div>
    </div>
  </section>
  <!-- End Register Here -->

  <!-- Java Script Link -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL"
    crossorigin="anonymous"></script>
    <script>
      const showPassword=document.querySelector("#show-password");
      const passwordField=document.querySelector("#password");

      showPassword.addEventListener("click",function () {
        this.classList.toggle("fa-eye-slash");

        const type=passwordField.getAttribute("type")==="password"?"text":"password";
        passwordField.setAttribute("type",type)
        
      })
    </script>
</body>

</html>